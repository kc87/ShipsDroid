<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">


            <gradient
                    android:startColor="#FFaa8800"
                    android:endColor="#FFaa8800"
                    android:type="linear"
                    android:angle="90"/>

            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
            <corners android:radius="6dp"/>
        </shape>

    </item>

    <item>

        <shape android:shape="rectangle">


            <gradient
                    android:startColor="#332200"
                    android:centerColor="#332200"
                    android:endColor="#886600"
                    android:centerX="0.5"
                    android:angle="90"/>

            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>

    <item>

        <shape android:shape="rectangle">


            <gradient
                    android:startColor="#33443300"
                    android:centerColor="#22886600"
                    android:endColor="#77555555"
                    android:centerX="0.5"
                    android:angle="90"/>

            <padding android:left="4dp" android:top="0dp" android:right="4dp" android:bottom="0dp"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>

</layer-list>

