<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#43f"/>
        </shape>
    </item>
    <item>
        <inset android:insetBottom="1px" android:insetLeft="1px"
               android:insetTop="1px" android:insetRight="1px">
            <shape android:shape="rectangle">
                <gradient android:angle="90"
                          android:startColor="#700"
                          android:centerColor="#800"
                          android:endColor="#900"/>
                <stroke android:color="#b00" android:width="2px"/>
                <corners android:radius="4px"/>
            </shape>
        </inset>
    </item>
</layer-list>